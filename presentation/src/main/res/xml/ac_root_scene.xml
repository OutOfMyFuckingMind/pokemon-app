<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="urn:oasis:names:tc:xliff:document:1.2">

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/fragment_host">
            <Layout android:layout_height="0dp"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"/>
        </Constraint>

        <Constraint android:id="@+id/bottom_nav_bar">
            <Layout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_host"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@id/fragment_host">
            <Layout android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"/>
        </Constraint>

        <Constraint android:id="@id/bottom_nav_bar">
            <Layout android:layout_height="0dp"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_host"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        motion:duration="50"/>
</MotionScene>
